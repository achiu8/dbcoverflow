<div class="question">
  <div class="votes">
    <%= question.votes %>
    <%= link_to 'Up', upvote_question_path(question),
      method: :patch,
      remote: true
    %>
    <%= link_to 'Down', downvote_question_path(question),
      method: :patch,
      remote: true
    %>
  </div>

  <span class="question-title">
    <%= link_to question.title, question_path(question) %>
  </span>

  <div class="options">
    <span class="edit">
      <%= link_to 'Edit', edit_question_path(question) %>
    </span>
    <span class="delete">
      <%= link_to 'Delete', question_path(question),
        method: :delete,
        remote: true
      %>
    </span>
  </div>
</div>
<hr>
