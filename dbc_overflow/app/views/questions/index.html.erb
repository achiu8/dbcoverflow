<div id="quote">
  <p><%= get_quote %></p>
</div>
<h1>Questions</h1>
<% @questions.each do |question| %>
<div class="question">
  <div class="votes">
    <%= question.votes %>
    <%= link_to 'Up', upvote_question_path(question), method: :patch %>
    <%= link_to 'Down', downvote_question_path(question), method: :patch %>
  </div>
  <span class="question-title">
    <%= link_to question.title, question_path(question) %>
  </span>
  <span class="edit">
    <%= link_to 'Edit', edit_question_path(question) %>
  </span>
</div>
<hr>
<% end %>

<h3>Add a question:</h3>

<%= render 'form' %>
