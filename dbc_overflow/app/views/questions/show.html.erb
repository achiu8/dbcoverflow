<h2><%= @question.title %></h2>
<div class="votes">
  <h3>
    Votes: <span class="question-votes"><%= @question.votes %></span>
    <%= link_to 'Up', upvote_question_path(@question),
      method: :patch,
      remote: true
    %>
    <%= link_to 'Down', downvote_question_path(@question),
      method: :patch,
      remote: true
    %>
  </h3>
<p><%= @question.content %></p>

<h3>Answers</h3>
<div id="answers">
  <%= render @question.answers.order(votes: :desc) %>
</div>

<h3>Add an answer:</h3>
<%= render 'answers/form' %>

<%= link_to 'Back', questions_path %>
<%= link_to 'Delete', question_path(@question), method: :delete, data: {
  confirm: 'Are you sure?'
} %>
