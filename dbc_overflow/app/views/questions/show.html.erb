<h2><%= @question.title %></h2>
<p><%= @question.content %>

<h3>Answers</h3>
<ul>
<% @answers.each do |answer| %>
  <li><%= answer.content %></li>
<% end %>
</ul>

<h3>Add an answer:</h3>
<%= render 'answers/form' %>

<%= link_to 'Back', questions_path %>
<%= link_to 'Delete', question_path(@question), method: :delete, data: {
  confirm: 'Are you sure?'
} %>
